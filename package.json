{
  "name": "api-node-books",
  "version": "1.0.0",
  "description": "API Node para CRUD de livros",
  "main": "server.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test mocha --opts tests/unit/mocha.opts tests/unit/**/*.spec.js",
    "test:unit-tdd": "cross-env NODE_ENV=test mocha --opts tests/unit/mocha.opts tests/unit/**/*.spec.js --watch",
    "test:integration": "cross-env NODE_ENV=test mocha --opts tests/integration/mocha.opts tests/integration/**/*.spec.js",
    "dev": "nodemon server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielguedesc/api-node-books.git"
  },
  "keywords": [
    "API",
    "NodeJS",
    "TDD"
  ],
  "author": "Gabriel Guedes Correa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabrielguedesc/api-node-books/issues"
  },
  "homepage": "https://github.com/gabrielguedesc/api-node-books#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "sinon": "^6.3.4",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.17",
    "morgan": "^1.9.1",
    "winston": "^3.1.0"
  }
}
